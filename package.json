{
  "name": "basic",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "bundle": "turbo run bundle",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,mdx,astro}\"",
    "clean": "rm -rf node_modules .turbo bun.lockb && turbo run clean"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.36",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@biomejs/biome": "^1.9.4"
  }
}
