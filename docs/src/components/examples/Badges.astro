    .b { color: var(--background0); }
    .red { --badge-color: var(--red); }
    .yellow { --badge-color: var(--yellow); }
    .green { --badge-color: var(--green); }
    .blue { --badge-color: var(--blue); }
    .fg { --badge-color: var(--foreground0); }
</style>

